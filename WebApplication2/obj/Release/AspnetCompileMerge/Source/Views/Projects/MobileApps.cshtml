@model IEnumerable<WebApplication2.Models.Entities.Project>

<style>
    .project-card {
    }

    .btn-link {
        border-color: white;
        width: 40%;
        color: white;
    }
</style>

<div>
    <header id="header">

        <div class="game-banner">
            <div class="overlay">
                <div class="container">
                    <div class="row" style="padding-top:100px;padding-bottom:300px;">
                        <div style="padding-top:100px;" class="col-md-4">
                            <div style="background-color:purple;opacity:0.8;margin-left:0px;padding:10px;width:100%">
                                <h3 style="color:white">
                                    Game Development<br />
                                </h3>
                                <h5 class="about-text" style="color:white">
                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Lorem ipsum dr incididunt ut labore et dolore magna aliqua.

                                </h5>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
</div>

<div style="height:600px;background-color:white;padding:40px;">
    <div class="col-md-12 form-group">
        <center><h1 style="font-size:45px;">See our Apps </h1></center>
    </div>
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="panel panel-default panel-body project-card" id="@item.ID" style="background-color:black">
                <center>
                    <img src="@item.ImageLink" class="col-md-2" id="@("as"+item.ID)" style="width:100%" />
                    <div style="position:absolute;top:40%;left:30%;right:30%">   <a href="/projects/gamepreview?gameid=@item.ID" style="width:100%;display:none" id="@("ps"+item.ID)" class="btn btn-link">View More</a></div>

                </center>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    $('.project-card').hover(function () {
        $('#as' + this.id).css("opacity", "0.1")
        $('#ps' + this.id).css("display", "inline")
    });
    $('.project-card').mouseleave(function () {
        $('#as' + this.id).css("opacity", "1")
        $('#as' + this.id).css("visibility", "visible")
        $('#ps' + this.id).css("display", "none")
    });
</script>