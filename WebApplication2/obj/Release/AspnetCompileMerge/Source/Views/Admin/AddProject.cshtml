@model WebApplication2.Models.DTO.ProjectViewModel

@{
    ViewBag.Title = "AddProject";
}
<div class="col-md-12">
    @Html.ActionLink("Back to List", "Projectlist", null, new { @class = "pull-right btn", @style = "background-color:#7698b5;color:white", enctype = "multipart/form-data" })
</div>
<br />
<h2>Add Project</h2>

@using (Html.BeginForm("AddProject", "admin", FormMethod.Post, new { enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.project.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input class="form-control" name="projectView.project.Name" />
            @Html.ValidationMessageFor(model => model.project.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.project.Description, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input class="form-control" name="projectView.project.Description" />
            @Html.ValidationMessageFor(model => model.project.Description, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.project.YoutubeLink, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input class="form-control" name="projectView.project.YoutubeLink" />
            @Html.ValidationMessageFor(model => model.project.YoutubeLink, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.project.GooglePlayLink, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input class="form-control" name="projectView.project.GooglePlayLink" />
            @Html.ValidationMessageFor(model => model.project.GooglePlayLink, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.project.ImageLink, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="projectView.FileMain" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Service Type</label>
        <div class="col-md-10">
            <select name="projectView.project.CategoryID">
                @foreach (var service in Model.projectservices)
                {
                    <option value="@service.Value">@service.Text</option>
                }
            </select>
            @*@Html.DropDownListFor("projectView.project.ServiceID", Model.projectservices)*@
        </div>
    </div>
    @*<div class="col-md-10">
        <input type="file" multiple name="projectView.Files"/>
        @Html.ValidationMessageFor(model => model.Files, "", new { @class = "text-danger" })
    </div>*@

    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" value="Create" class="btn col-md-offset-4" style="position:relative;left:10%;background-color:#47B5C3;color:white;" />
        </div>
    </div>
</div>
}

