@model WebApplication2.Models.DTO.ImageViewModel

@{
    ViewBag.Title = "CarouselImages";
}

<h3>Carousel Images for @Model.proj.Name</h3>


@foreach (var item in Model.images)
{

    <img src="@item.Path" width="70px" height="70px" />

    @Html.ActionLink("Remove", "DeleteImage", new { xid = item.ID })

}

@using (Html.BeginForm("AddImage", "admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <input type="text" name="projectID" value="@Model.proj.ID" style="visibility:hidden" />
    <div class="form-group">
        <label class="control-label col-md-2">Add Image</label>
        <div class="col-md-5">
            <input type="file" name="FileMain" class="form-control"/>
            <input type="submit" value="submit"/>
        </div>
        <div class="col-md-5">
            <a href="@Url.Action( "Projectlist" ,"Admin")" class="button">Done</a>
        </div>
    </div>
}
