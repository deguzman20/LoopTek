@model IEnumerable<WebApplication2.Models.Entities.Category>

@{
    ViewBag.Title = "ServicesList";
}
<style>
    #table-row > th{
        color:white;
    }
</style>
<h2>Services List</h2>

<p>
    @Html.ActionLink("Create New", "AddService", null, new { @class = "btn", @style = "background-color:#7698b5;color:white" })
</p>

<table class="table table-striped">
    <tr style="background-color:#7698b5" id="table-row">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Banner
        </th>
        <th>
            Action
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <img src="@item.BannerLocation" width="50px" height="50px" />
        </td>
        <td>
          <div class="btn-group">
            @Html.ActionLink("Edit", "EditService", new { xid=item.ID }, new { @class = "btn", @style = "background-color:#303c53;color:white" }) 
            @Html.ActionLink("Delete", "DeleteService", new { xid=item.ID }, new { @class = "btn", @style = "background-color:#7698b5;color:white" })
          </div> 
        </td>
    </tr>
}

</table>
