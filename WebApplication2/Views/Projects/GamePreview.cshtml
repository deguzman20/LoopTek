﻿@model WebApplication2.Models.DTO.PreviewModel

<div style="padding-left:5%;padding-right:5%;background-color:black">
    <header id="header">
        <div>
            <div class="overlay">
                <div class="container">
                    <div id="myCarousel" class="carousel slide" style="width:100%; height: 400px !important;" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            @if (Model.images != null)
                            {
                                for (int i = 0; i < Model.images.Count(); i++)
                                {
                                    <li data-target="#myCarousel" data-slide-to="@i"></li>
                                }
                            }
                            else
                            {
                                <li data-target="#myCarousel" data-slide-to="0"></li>
                            }

                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" style="width:100%; height: 400px !important;">
                            @if (Model.images != null)
                            {
                                for (int i = 0; i < Model.images.Count(); i++)
                                {
                                    <div class="item @(i == 0 ? "active" : "") ">
                                        <img src="@Model.images[i].Path" style="width:100%; height: 400px !important;" alt="@Model.images[i].Name">

                                    </div>
                                }
                            }
                            else
                            {
                                <div class="item active">
                                    <img src="~/Images/games/bannergame.jpg" alt="New York">
                                </div>

                            }

                        </div>

                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </header>
</div>
<div class="image-div" style="position:absolute;top:320px;position:absolute;left:10%">
    <center>
        <img src="@Model.proj.ImageLink" class="col-md-2" style="width:170px;height:170px;" />

        <div style="padding-top:80px;" class="col-md-2 text-div">
            <div style="background-color:black;opacity:0.8;margin-left:0px;padding:5px;width:200px;">
                <h3 style="color:white">
                    @Model.proj.Name<br />
                </h3>

            </div>

        </div>
    </center>
</div>
<div class="div-details" style="height:400px;background-color:white;padding:40px;margin-top:40px;">
    <div class="col-md-7">

        <h2>Overview</h2>
        <div class="about-text">
            <p style="font-size:16px;color:black; text-indent: 50px;">@Model.proj.Description</p>
        </div>
    </div>
    @if (Model.proj.YoutubeLink != null && Model.proj.YoutubeLink != "")
    {
        <div class="col-md-5">
            <h3>Video :</h3>
            <iframe width="100%" src="@Model.proj.YoutubeLink"></iframe>
        </div>
    }

</div>
