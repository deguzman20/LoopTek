@model IEnumerable<WebApplication2.Models.Entities.Person>

@{
    ViewBag.Title = "Team";
}

<h2>Team</h2>

<p>
    @Html.ActionLink("Add new Member", "AddTeam")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <img src="@item.ImageLocation" width="50px" height="50px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditTeam", new { xid=item.ID }) |
            @Html.ActionLink("Delete", "DeleteTeam", new { xid=item.ID })
        </td>
    </tr>
}

</table>
