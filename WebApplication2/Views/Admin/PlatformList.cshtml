@model IEnumerable<WebApplication2.Models.Entities.Platform>

@{
    ViewBag.Title = "Platform List";
}
<style>
    #table-row > th {
        color: white;
    }
</style>
<h2>Platform List</h2>

<p>
    @Html.ActionLink("Create New", "Create",null,new { @class="btn" ,@style= "background-color:#7698b5;color:white"})
</p>
<table class="table table-striped">
    <tr style="background-color:#7698b5" id="table-row">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
          <div class="btn-group">
            @Html.ActionLink("Edit", "Edit", new { id=item.ID },new { @class="btn",@style= "background-color:#303c53;color:white" }) 
            @Html.ActionLink("Details", "Details", new { id=item.ID },new { @class="btn", @style = "background-color:#47b6c2;color:white" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.ID },new { @class="btn", @style = "background-color:#7698b5;color:white" })
           </div>
        </td>
    </tr>
}

</table>
